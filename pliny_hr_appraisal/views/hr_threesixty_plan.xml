<?xml version="1.0"?>
<odoo>
    <record id="hr_threesixty_plan_action" model="ir.actions.act_window">
        <field name="name">360 Plans</field>
        <field name="res_model">hr.threesixty.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new 360 degree plan
          </p><p>
           	These are used to add employees to an 360 degree plan
          </p>
        </field>
    </record>

    <record id="hr_appraisal_plan_tree" model="ir.ui.view">
        <field name="name">hr.threesixty.plan.tree</field>
        <field name="model">hr.threesixty.plan</field>
        <field name="arch" type="xml">
            <tree string="360 Plan" >
              	  <field name="name"/>
              	  <field name="start_date"/>
              	  <field name="end_date"/>
              	  <field name="score_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_appraisal_threesixty_allocation_tree" model="ir.ui.view">
        <field name="name">hr.threesixty.plan.allocation.tree</field>
        <field name="model">hr.threesixty.plan.allocation</field>
        <field name="arch" type="xml">
            <tree string="360 Plan Employees" >
                <field name="reviewer_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_threesixty_plan_question_tree" model="ir.ui.view">
        <field name="name">hr.threesixty.plan.question.tree</field>
        <field name="model">hr.threesixty.plan.question</field>
        <field name="arch" type="xml">
            <tree string="360 Plan Questions" >
                <field name="name"/>
                <field name="description"/>
                <field name="score_id"/>
            </tree>
        </field>
    </record>


    <record id="hr_threesixty_plan_view_form" model="ir.ui.view">
        <field name="name">360 Plan</field>
        <field name="model">hr.threesixty.plan</field>
        <field name="arch" type="xml">
            <form string="360 Plan">
                <header>
                     <!--button name="action_generate_threesixty" string="Allocate"  type="object" class="btn-primary"/-->
                     <button name="%(action_add_employees_wizard)d" string="Add Employees" type="action" class="btn-primary" context="{'default_plan_id': active_id}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="score_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="deadline"/>
                        </group>
                        <group>
                            <field name="minimum_review"/>
                            <field name="recommended_review"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Default Questions">
                            <field name="question_ids">
                                 <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="maximum_value"/>
                                    <field name="score_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Employee Allocations">
                            <field name="allocation_ids">
                                 <tree editable="bottom">
                                    <field name="reviewer_id"/>
                                    <field name="number_of_reviews"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
