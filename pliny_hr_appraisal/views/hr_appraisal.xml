<?xml version="1.0"?>
<odoo>
    <record id="hr_appraisal_tree" model="ir.ui.view">
        <field name="name">hr.appraisal.tree</field>
        <field name="model">hr.appraisal</field>
        <field name="arch" type="xml">
            <tree string="Appraisal" create="false" >
                <field name="plan_id"/>
                <field name="employee_id"/>
                <field name="manager_id"/>
                <field name="job_id"/>
                <field name="state"/>
                <field name="deadline"/>
            </tree>
        </field>
    </record>


    <record id="hr_appraisal_action" model="ir.actions.act_window">
        <field name="name">My Appraisals</field>
        <field name="res_model">hr.appraisal</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_appraisal_tree"/>
        <field name="domain">
            <![CDATA[[('employee_id.user_id', '=', uid)]]]>
        </field>
    </record>

    <record id="hr_appraisal_manager_tree" model="ir.ui.view">
        <field name="name">hr.appraisal.tree</field>
        <field name="model">hr.appraisal</field>
        <field name="arch" type="xml">
            <tree string="Appraisal" create="false" >
                <field name="plan_id"/>
                <field name="employee_id"/>
                <field name="manager_id"/>
                <field name="job_id"/>
                <field name="state"/>
                <field name="deadline"/>
            </tree>
        </field>
    </record>


    <record id="hr_appraisal_manager_review" model="ir.actions.act_window">
        <field name="name">Manager Reviews</field>
        <field name="res_model">hr.appraisal</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_appraisal_tree"/>
        <field name="domain">
            <![CDATA[[('manager_id.user_id', '=', uid)]]]>
        </field>
    </record>



    <record id="hr_appraisal_hr_action" model="ir.actions.act_window">
        <field name="name">All Appraisals</field>
        <field name="res_model">hr.appraisal</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_appraisal_tree"/>
    </record>


    <record id="hr_appraisal_search" model="ir.ui.view">
        <field name="name">hr.appraisal.search</field>
        <field name="model">hr.appraisal</field>
        <field name="arch" type="xml">
            <search string="Appraisal">
                <field name="employee_id" string="Employee" />
                <field name="manager_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <separator/>
                <filter string="State" name="state" domain="[('state', '=', True)]"/>
                <group expand="1" string="Group By">
                    <filter string="Department" name="department" context="{'group_by':'department_id'}"/>
                    <filter string="State" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>



    <record id="hr_appraisal_view_form" model="ir.ui.view">
        <field name="name">My Appraisal</field>
        <field name="model">hr.appraisal</field>
        <field name="arch" type="xml">
            <form string="My Appraisal" create="false">

                <header>
                    <field name="state" invisible="1"/>
                    <button name="action_draft" type="object" string="Draft" invisible ="state == 'done' or state == 'cancelled' or state == 'draft'"/>
                    <button name="action_submit" type="object" string="Submit" invisible ="state == 'done' or state == 'cancelled' or state == 'manager_review' or state == 'submitted'"/>
                    <button name="action_manager_review" type="object" string="Manager Done" invisible ="state == 'done' or state == 'cancelled' or state == 'draft' or state == 'manager_review'"/>
                    <button name="action_complete" type="object" string="Final Assesement" invisible ="state == 'done' or state == 'cancelled' or state == 'submitted' or state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,manager_review,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly ="state == 'done' or state == 'cancelled'"/>
                            <field name="manager_id" readonly ="state == 'done' or state == 'cancelled'"/>
                            <field name="job_id" readonly ="state == 'done' or state == 'cancelled'"/>
                            <field name="department_id" readonly ="state == 'done' or state == 'cancelled'"/>
                        </group>
                        <group>
                            <field name="plan_id" readonly="1" />
                            <field name="employee_submit_date" readonly="1" />
                            <field name="manager_submit_date" readonly="1" />
                        </group>
                        <group>
                            <field name="start_date" readonly="1" />
                            <field name="end_date" readonly="1" />
                            <field name="deadline" readonly="1" />
                        </group>
                        <group>
                            <field name="total_employee_score" readonly="1" />
                            <field name="employee_score_percentage" readonly="1" widget="progressbar"/>
                            <field name="total_manager_score" readonly="1" />
                            <field name="manager_score_percentage" readonly="1" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Questions">
                            <field name="question_ids" readonly ="state == 'done' or state == 'cancelled'">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="appraisal_state" invisible="1"/>
                                    <field name="description"/>
                                    <field name="maximum_value"/>
                                    <field name="employee_value"
                                        readonly ="appraisal_state == 'done' or appraisal_state == 'submitted' or appraisal_state == 'cancelled' or appraisal_state == 'manager_review'"/>
                                    <field name="employee_comment"
                                        readonly ="appraisal_state == 'done' or appraisal_state == 'submitted' or appraisal_state == 'cancelled' or appraisal_state == 'manager_review'"/>
                                    <field name="manager_value"
                                        readonly = "appraisal_state == 'done' or appraisal_state == 'cancelled'"
                                        invisible ="appraisal_state == 'draft' or appraisal_state == 'submitted'"/>
                                    <field name="manager_comment"
                                        readonly = "appraisal_state == 'done' or appraisal_state == 'cancelled'"
                                        invisible ="appraisal_state == 'draft' or appraisal_state == 'submitted'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
