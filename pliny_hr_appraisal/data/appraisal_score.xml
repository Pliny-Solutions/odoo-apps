<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 5 Star Rating -->
    <record id="appraisal_score_5_star" model="hr.appraisal.score">
        <field name="name">5 Star</field>
        <field name="minimum_value">0</field>
        <field name="maximum_value">5</field>
        <field name="description">A simple 5-star rating system</field>
    </record>

    <!-- 10 Point System -->
    <record id="appraisal_score_10_point" model="hr.appraisal.score">
        <field name="name">10 Point System</field>
        <field name="minimum_value">0</field>
        <field name="maximum_value">10</field>
        <field name="description">Scoring out of 10</field>
    </record>

    <!-- Percentage -->
    <record id="appraisal_score_percentage" model="hr.appraisal.score">
        <field name="name">Percentage</field>
        <field name="minimum_value">0</field>
        <field name="maximum_value">100</field>
        <field name="description">Score using percentage (0â€“100%)</field>
    </record>
</odoo>
