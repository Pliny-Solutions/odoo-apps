<?xml version="1.0"?>
<odoo>
    <record id="model_hr_training" model="ir.model">
        <field name="name">hr.training</field>
        <field name="model">hr.training</field>
        <field name="state">base</field>
    </record>

    <record id="training_hr_rule" model="ir.rule">
        <field name="name">Training: HR full access</field>
        <field name="model_id" ref="model_hr_training"/>
        <field name="domain_force">[(1, '=', 1)]</field> <!-- Allow all -->
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="groups" eval="[(4, ref('hr_training.group_training_hr'))]"/>
    </record>

