<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_employee_form_inherit_training" model="ir.ui.view">
    <field name="name">hr.employee.form.training</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='button_box']" position="inside">
        <button name="action_view_trainings"
                type="object"
                class="oe_stat_button"
                icon="fa-graduation-cap">
          <field name="training_count" widget="statinfo" string="Trainings"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
