<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Property Tree View -->
    <record id="view_property_tree" model="ir.ui.view">
        <field name="name">room.property.tree</field>
        <field name="model">room.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_type"/>
                <field name="number_of_rooms"/>
            </tree>
        </field>
    </record>

    <!-- Property Form View -->
    <record id="view_property_form" model="ir.ui.view">
        <field name="name">room.property.form</field>
        <field name="model">room.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="property_type"/>
                        <field name="number_of_rooms"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Rooms">
                            <field name="room_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="room_type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">room.property</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>

