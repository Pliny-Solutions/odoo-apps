<?xml version="1.0"?>
<odoo>

    <record id="rule_hr_appraisal_hr" model="ir.rule">
        <field name="name">Room Admin: Sees all booking, others see their own</field>
        <field name="model_id" ref="model_room_booking"/>
        <field name="global" eval="False"/>
        <field name="groups" eval="[(4, ref('room_booking.room_admin'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>


		<record id="rule_room_booking_employee_only" model="ir.rule">
				<field name="name">Room Booking: Only see you views</field>
				<field name="model_id" ref="model_room_booking"/>
				<field name="domain_force">['|',('employee_id.user_id', '=', user.id), ('manager_id.user_id', '=', user.id)]</field>
				<field name="groups" eval="[(4, ref('base.group_user'))]"/>
		</record>



</odoo>


