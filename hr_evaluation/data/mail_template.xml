<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mail_template_appraisal_allocated_employee" model="mail.template">
            <field name="name">Appraisal</field>
            <field name="model_id" ref="hr_evaluation.model_hr_appraisal"/>
            <field name="subject">Appraisal</field>
            <field name="email_from">{{ (user.email_formatted)}}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p> Dear <t t-out="object.employee_id.name or ''"/>,</p>

                    <p>You have been allocated an appraisal scheduled for review.</p>
                    <p>Regards,<br/>HR Team</p>
                    <t t-out="user.name"/>
               </div>
            </field>
        </record>
    </data>


        <data>

        <record id="mail_template_appraisal_allocated_manager" model="mail.template">
            <field name="name">Appraisal - Manager</field>
            <field name="model_id" ref="hr_evaluation.model_hr_appraisal"/>
            <field name="subject">Appraisal</field>
            <field name="email_from">{{ (user.email_formatted)}}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p> Dear <t t-out="object.employee_id.name or ''"/>,</p>

                    <p>You have an appraisal to review. </p>
                    <p>Please take some time to add on the target and questions that your employee should be reviewed upon</p>
                    <p>Regards,<br/>HR Team</p>
                    <t t-out="user.name"/>
               </div>
            </field>
        </record>
    </data>
</odoo>
